<!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="~/img/fashion/wishlist.jfif" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Wishlist Page</h2>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Wishlist</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- Cart view section -->
<section id="cart-view">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cart-view-area">
                    <div class="cart-view-table aa-wishlist-table">
                        <form action="">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Stock Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.YeuThich != null) 
                                        { 
                                            foreach(var item in ViewBag.YeuThich) 
                                            { 
                                                <tr>
                                                    <td><a class="remove" href="@Url.Action("RemoveFormWishList", "Shopping", new { id = @item.MaSanPham })"><fa class="fa fa-close"></fa></a></td>
                                                    <td><a href="#"><img src="@item.Hinh1" alt="img"></a></td>
                                                    <td><a class="aa-cart-title" href="#">@item.TenSanPham</a></td>
                                                    <td>$@(Math.Round((double)item.Giaban *(1 - item.Sale),0))</td>
                                                    <td>@item.TinhTrang</td>
                                                    <td><a href="@Url.Action("AddToCart", "Shopping", new { id = @item.MaSanPham })" class="aa-add-to-cart-btn">Add To Cart</a></td>
                                                </tr>
                                            }
                                        
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
